{
  "manifest_version": 3,
  "name": "dev-snap",
  "version": "1.0",
  "description": "Facilitador de tarefas",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "pages/index.html"
  }
}
